Config { font = "xft:Consolas-10"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW L 93
       , commands = [ 
                      Run Weather "ULLI" 
                                  ["-t"      , "SPb <tempC>Â°C"         , 
                                  "-L"       , "8"                     , 
                                  "-H"       , "20"                    , 
                                  "--high"   , "orange"                , 
                                  "--low"    , "lightblue"] 36000

                    , Run Network "wlan0" 
                                  ["-L"      , "50"        , 
                                  "-H"       , "500"       , 
                                  "--normal" , "lightblue" , 
                                  "--high"   , "lightgreen",
                                  "-t"       , "Net: <rx> KbS"] 10

                    , Run MultiCpu ["-L"       , "3"       ,
                                    "-H"       , "50"      , 
                                    "--normal" , "green"   , 
                                    "--high"   , "red"] 10

                    , Run Memory ["-t","Mem: <usedratio>%"] 10

                    , Run Date "%a %b %_d %H:%M" "date" 10

                    , Run Battery ["-L"       ,"50"                         ,
                                   "-H"       , "75"                        , 
                                   "--high"   , "white"                     , 
                                   "--normal" , "yellow"                    , 
                                   "--low"    , "red"                       , 
                                   "-t"       , "Batt: <left>%"] 10

                    , Run Volume "default" 
                                 "Master" 
                                 ["-t", "Vol: <volume>%"] 10

                   , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %default:Master% <fc=#555>|</fc> %ULLI% | %multicpu% <fc=#555>|</fc> %memory% <fc=#555>|</fc> %wlan0% <fc=#555>|</fc> %battery% | <fc=white>%date%</fc>"
}

